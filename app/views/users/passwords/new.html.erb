<h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"basic-form" }) do |f| %>
  <div>
    <%= f.email_field :email, autofocus: true, :placeholder=>"Email" %>
  </div>

  <div><%= f.submit "Reset", :class=>"mock-btn" %></div>

  <%= render "users/shared/links" %>
<% end %>



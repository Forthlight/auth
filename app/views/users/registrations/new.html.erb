<h1>Sign up - User</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="frap"><%= devise_error_messages! %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, :class=>"span11" %>
  </div>
  <br>
  <br>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username, :class=>"span11" %>
  </div>
  <br>
  <br>

  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class=>"span11" %>
  </div>
  <br>
  <br>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class=>"span11" %>
  </div>
  <br>
  <br>

  <div>
    <%= f.label :role %>
    <%= f.select(:role, SimpleRoles.config.valid_roles.map.with_index {|x, i| i = x.capitalize, x}) %>
  </div>
  <br>
  <br>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", :class=>"span11" %>
  </div>
  <br>
  <br>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"span11" %>
  </div>
  <br>
  <br>

  <div>
    <%= f.submit "Sign up", :class=>"mock-btn" %>
  </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
